window {
margin: 0px;
border: 2px solid #7dcfff;
background-color: #15161e;
border-radius: 7px;
}

#input {
margin: 5px;
border: none;
color: #c0caf5;
background-color: #414868;
}

#inner-box {
margin: 5px;
border: none;
background-color: #15161e;
}

#outer-box {
margin: 5px;
border: none;
background-color: #15161e;
}

#scroll {
margin: 0px;
border: none;
}

#text {
margin: 5px;
border: none;
color: #c0caf5;
} 

#entry.activatable #text {
color: #282a36;
}

#entry > * {
color: #7aa2f7;
}

#entry:selected {
background-color: #c0caf5;
border-radius: 7px;
}

#entry:selected #text {
font-weight: bold;
color: #15161e
}
